<div class="card text-center text-dark border-light">
    <div class="card-body">
        <h1>AÑADIR DINERO</h1>
    </div>
</div>
<div class="container p-2">
    <div class="row">
        <div class="col">
            <div class="card border-light text-center">
                <h3>Targeta</h3>
                <form action="/bank/add" method="POST">
                    <div class="form-group">
                        <input type="text" class="form-control" name="targetnumber" placeholder="numero de la targeta"
                            autofocus>
                    </div>
                    <div class="form-group">
                        <input type="text" class="form-control" name="targetpin" placeholder="pin de la targeta">
                    </div>
                    <div class="form-group">
                        <input type="text" class="form-control" name="targetcantitate" placeholder="cantidad que quieres añadir">
                    </div>
                    <div class="form-group d-grid">
                        <button class="btn btn-success">
                            añadir
                        </button>
                    </div>
                </form>
            </div>
        </div>
        <div class="col">
            <div class="card border-light text-center">
                <h3>Cheque</h3>
                <form action="/bank/add" method="POST">
                    <div class="form-group">
                        <input type="text" class="form-control" name="checkfrom" placeholder="quien te ha dado el cheque">
                    </div>
                    <div class="form-group">
                        <input type="text" class="form-control" name="checkcode" placeholder="codigo del cheque">
                    </div>
                    <div class="form-group">
                        <input type="text" class="form-control" name="checkpin" placeholder="pin del cheque">
                    </div>
                    <div class="form-group d-grid">
                        <button class="btn btn-success">
                            añadir
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>